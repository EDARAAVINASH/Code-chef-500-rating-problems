import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner scan=new Scanner(System.in);
		int a=scan.nextInt();
		double b=scan.nextDouble();
		if(a%5==0 & b>=(a+0.50))
		{
		    b=b-(a+0.50);
		}
		System.out.printf("%.2f",b);

	}
}
